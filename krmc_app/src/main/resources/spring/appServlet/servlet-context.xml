	<!-- Handles HTTP GET requests for /resources/** by efficiently serving up static resources in the ${webappRoot}/resources/ directory -->
	<resources mapping="/resources/**" 	location="/resources/" />
	<!-- <resources mapping="/favicon.ico" location="/resources/images/common/favicon.ico" />  -->
	
	<!-- Resolves views selected for rendering by @Controllers to .jsp resources in the /WEB-INF/views directory -->
	<beans:bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<beans:property name="prefix" value="/WEB-INF/views/" />
		<beans:property name="suffix" value=".jsp" />
	</beans:bean>

	<!-- Only needed because we install custom converters to support the examples in the org.springframewok.mvc.convert package -->
	<beans:bean id="conversionService" class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
		<beans:property name="formatters">
            <beans:bean class="org.springframework.mvc.convert.MaskFormatAnnotationFormatterFactory" />
		</beans:property>
	</beans:bean>

	<!-- Only needed because we require fileupload in the org.springframework.mvc.fileupload package -->
	<beans:bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver" />


	<!--  user-defined @Controller beans that process client requests -->
	<!-- Maps '/' requests to the 'main' view -->
	<mvc:view-controller path="/" 				view-name="redirect:/main/mainDashboard" />
	<mvc:view-controller path="/admin" 			view-name="security/securityForm" />
	<!-- controller request to the 'form' View  -->
	<mvc:view-controller path="/web/common/working" 			view-name="common/error/working" />
	<mvc:view-controller path="/web/res/common/working" 		view-name="common/error/resWorking" />

	<!-- Security controller request to the 'form' View -->
	<mvc:view-controller path="/security/securityForm" 		view-name="security/securityForm" />
	<mvc:view-controller path="/security/securityFail" 		view-name="security/securityFail" />
	<mvc:view-controller path="/security/securitySignout"	view-name="security/securitySignout" />
	<mvc:view-controller path="/security/accessDenied"		view-name="security/accessDenied" />
	<mvc:view-controller path="/security/securityIndex"		view-name="security/securityIndex" />

	<context:component-scan base-package="org.springframework" use-default-filters="false">
		<context:include-filter expression="org.springframework.stereotype.Controller" type="annotation" />
	</context:component-scan>

	<context:component-scan base-package="com.doppio" use-default-filters="false" >
		<context:include-filter expression="org.springframework.stereotype.Controller" type="annotation" />
	</context:component-scan>


