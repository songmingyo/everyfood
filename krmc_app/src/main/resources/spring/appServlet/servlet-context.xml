  	<!-- Locale 설정 common.Language.Type config.properties에서 가져옴 -->
	<beans:bean id="localeResolver" class="org.springframework.web.servlet.i18n.SessionLocaleResolver">
		<beans:property name="defaultLocale" value="${Common.Language.Type}" />
	</beans:bean>


	<mvc:interceptors>
    	<beans:bean id="localeChangeInterceptor" class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor">
    		<beans:property name="paramName" value="language" />
    	</beans:bean>
    </mvc:interceptors>


 	<!-- Interceptor -->
    <mvc:interceptors>
        <mvc:interceptor>
        	<mvc:mapping path="/" />
        	<mvc:mapping path="/main/**" />
        	<mvc:mapping path="/web/**" />
			<mvc:mapping path="/app/**" />		<!-- 정보관리 -->
			<mvc:mapping path="/front/**" />	<!-- 정보관리 -->
			<mvc:mapping path="/res/**" />		<!-- 모바일 -->
			<exclude-mapping path="/err/**" />	<!-- 에러 리다이렉트 -->
        	<!-- <mvc:mapping path="/frame/commonFrameMenu" /> -->
		    <beans:bean class="com.doppio.common.interceptor.AuthenticInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

    <!-- jxl Excel Download ViewResolver -->
<!--    <beans:bean id="jxlExcelFileDownLoadViewResolver" class="org.springframework.tronic.resolver.JxlExcelFileDownLoadViewResolver" />-->

	<!-- File Download ViewResolver -->
	<beans:bean id="downloadView" class="org.springframework.tronic.resolver.FileDownLoadViewResolver" />
	<beans:bean id="downloadViewResolver" class="org.springframework.web.servlet.view.BeanNameViewResolver">
		<beans:property name="order">
			<beans:value>0</beans:value>
		</beans:property>
	</beans:bean>
	
	<!-- zip File Download View Resolver -->
	<beans:bean id="downloadListView" class="org.springframework.tronic.resolver.FileDownLoadListViewResolver" />
	<beans:bean id="downloadListViewResolver" class="org.springframework.web.servlet.view.BeanNameViewResolver">
		<beans:property name="order">
			<beans:value>0</beans:value>
		</beans:property>
	</beans:bean>

    <!-- Aspect -->
    <!-- spring Aspect-logging -->
	<beans:bean id="loggingAspect" class="com.doppio.common.logging.LoggingAspect" />
	<aop:config proxy-target-class="true">
	    <aop:aspect id="aspectLoggging" ref="loggingAspect">
	        <aop:pointcut id="controllerPointcut" expression="execution(* com.doppio..controller.*Controller.*(..))" />
	        <aop:around method="logAround" pointcut-ref="controllerPointcut"  />

	        <aop:pointcut id="mapperPointcut" expression="execution(* com.doppio..service.impl.*Mapper.*(..))" />
	        <aop:around method="logAfter" pointcut-ref="mapperPointcut"  />
	    </aop:aspect>
	</aop:config>
	
		
	<!--spring Aspet - login-Downloadresol -->
	<beans:bean id="fileDownloadControllerAspect" class="com.doppio.common.logging.FileDownloadAspect" />
		<aop:config proxy-target-class="true">
			<aop:aspect id="aspectLogggingFileDown" ref="fileDownloadControllerAspect">
		  		<aop:pointcut id="controllerFilePointcut" expression="execution(* com.doppio.common.controller.FileDownLoadController.fileDownloadInit(..))" />
	      		<aop:around method="logAround" pointcut-ref="controllerFilePointcut"  />
	     	</aop:aspect>   
	</aop:config>
   
	
	<!--spring Aspet - login-ExcelDownloadresol -->
	<beans:bean id="excelfileDownloadResolverAspect" class="com.doppio.common.logging.FileDownloadAspect" />
	<aop:config proxy-target-class="true">
		<aop:aspect id="aspectLogggingExcelDown" ref="excelfileDownloadResolverAspect">
			<aop:pointcut id="controllerExcelPointcut" expression="execution(* com.doppio..controller.*Controller.*ExcelDown(..))"/>
			<aop:around method="excellogAround" pointcut-ref="controllerExcelPointcut"/>
		</aop:aspect>
	</aop:config>
	
	
	<context:property-placeholder location="classpath:property/config.properties" />

