  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/views/common/error/404Exception.jsp</location>
  </error-page>
   <error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/views/common/error/403Exception.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/WEB-INF/views/common/error/500Exception.jsp</location>
  </error-page>
  <session-config>
    <session-timeout>300</session-timeout>
  </session-config>

  <description>MARIA DB - KRMC_SYS</description>
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>KRMC_SYS</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>


  <distributable/>
</web-app>