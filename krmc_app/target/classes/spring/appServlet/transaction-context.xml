    <!-- ensure that the above transactional advice runs for any execution of an operation defined by the FooService interface -->
	<aop:config>
        <aop:pointcut id="fooServiceOperation" 		 			expression="execution(* com.doppio..*Service.*(..))" />
        <aop:pointcut id="fooServiceImplOperation" 	 			expression="execution(* com.doppio..*ServiceImpl.*(..))" />
